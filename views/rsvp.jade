.modal(tabindex='-1', role='dialog', aria-hidden='true')
    .modal-dialog
      form(name='validateForm', class='modal-content', ng-submit='validateRsvpCode()', ng-hide='validated')
        .modal-header
          button(type='button', class='close', aria-label='Close', ng-click='$hide()')
            span(aria-hidden='true') &times;
          h4.modal-title.text-center RSVP
        .modal-body
          .row.form-group(ng-class="{ 'has-error': validateForm.code.$dirty && validateForm.code.$error.required }")
            .col-sm-offset-2.col-sm-3
              label(for='code') Registration Key:
            .col-sm-6
              input(id='code', name='code', ng-model='code', required)
              span(ng-show='validateForm.code.$dirty && validateForm.code.$error.required', class='help-block') Registration key is required
        .modal-footer
          button(type='button', class='btn btn-close', ng-click='$hide()') Close
          button(type='submit', class='btn btn-submit', ng-disabled='validateForm.$invalid') Submit